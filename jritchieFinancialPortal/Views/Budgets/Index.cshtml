@model IEnumerable<jritchieFinancialPortal.Models.CodeFirst.Budget>

@{
    ViewBag.Title = "Budget Index";
}


<div class="container slide-in-right">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <div class="dropdown pull-right">
                    <a href="@Url.Action("Create")" class="btn btn-default"><span> New Budget </span><i class="fa fa-plus-circle text-custom"></i></a>
                </div>

                <h4 class="header-title m-t-0 m-b-30">Budgets</h4>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">

                    <thead>
                        <tr>
                            <th>
                                Budget Name
                                @*@Html.DisplayNameFor(model => model.Name)*@
                            </th>
                            <th>
                                Date Created
                            </th>
                            <th>
                                Type
                                @*@Html.DisplayNameFor(model => model.TransactionType.Name)*@
                            </th>
                            <th>
                                Category
                                @*@Html.DisplayNameFor(model => model.Category.Name)*@
                            </th>
                            <th>
                                Frequency
                                @*@Html.DisplayNameFor(model => model.Frequency.Name)*@
                            </th>
                            <th>
                                Amount
                                @*@Html.DisplayNameFor(model => model.Amount)*@
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ToUserTime(item.DateCreated, ViewBag.UserTimeZone as string, "MM/dd/yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransactionType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Frequency.Name)
                                </td>
                                <td style="text-align:right; padding-right:25px">
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td style="text-align:center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:#ebe0eb" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:#ebe0eb" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:#ebe0eb" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div><!-- end col -->
    </div><!-- end row -->
    @*<div class="row" style="margin-top:10px">
            <div class="col-sm-12">
                <div class="card-box table-responsive">

                </div>
            </div><!-- end col -->
        </div><!-- end row -->*@

</div><!-- end container -->


