                                                </li>
                                                <li>
                                                    <h5 style="color: #35b8e0;"><i class="fa fa-circle m-r-5"></i>Budgeted</h5>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="morris-bar-example" style="height: 200px;"></div>
                                    </div>
                                </div>
                            </div>*@

                    </div>
                    <!-- end row -->

                    <div class="row">
                        <div class="col-md-12" style="text-align:center">
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Budget.Id }, new { style = "color:#ebe0eb" }) |
                                @Html.ActionLink("Back to Budgets", "Index", null, new { style = "color:#ebe0eb" })
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



