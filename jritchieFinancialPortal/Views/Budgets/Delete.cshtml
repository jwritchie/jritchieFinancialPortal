@model jritchieFinancialPortal.Models.CodeFirst.Budget

@{
    ViewBag.Title = "Delete Budget";
}




<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Delete Budget</h4>

                <hr />

                <div class="row">

                    <h5>Are you sure you want to delete this?</h5>

                    <dl class="dl-horizontal">
                        <dt>
                            Date Created
                        </dt>
                        <dd>
                            @Html.ToUserTime(Model.DateCreated, ViewBag.UserTimeZone as string, "MM/dd/yyyy")
                        </dd>

                        <dt>
                            Date Updated
                        </dt>
                        <dd>
                            @Html.ToUserTime(Model.DateCreated, ViewBag.UserTimeZone as string, "MM/dd/yyyy")
                        </dd>

                        <dt>
                            Budget Name
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            Type
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TransactionType.Name)
                        </dd>
                        <dt>
                            Category
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>

                        <dt>
                            Frequency
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Frequency.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Index", null, new { style = "color:#ebe0eb" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
