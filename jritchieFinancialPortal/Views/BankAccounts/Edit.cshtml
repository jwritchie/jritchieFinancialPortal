@model jritchieFinancialPortal.Models.CodeFirst.BankAccount

@{
    ViewBag.Title = "Edit BankAccount";
}

@*<h2>Edit Account</h2>
    <h4>@ViewBag.CurrentUserHouseholdName</h4>*@

<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Edit Account</h4>

                <hr />

                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @*<h4>Account</h4>*@
                            @*<hr />*@
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.Balance)
                            @Html.HiddenFor(model => model.Opened)
                            @Html.HiddenFor(model => model.Closed)
                            @Html.HiddenFor(model => model.HouseholdId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Account Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.BankId, "BankId", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-9">
                                    @Html.DropDownList("BankId", null, htmlAttributes: new { @class = "form-control" })
                                    @*@Html.DropDownListFor(model => model.BankId, (SelectList)ViewBag.BankId, "--  Select  --", new { @class = "form-control" })*@
                                    @Html.ValidationMessageFor(model => model.BankId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <hr />

                <div class="row" style="text-align:center">
                    <a href="@Url.Action("Index")" style="color:#ebe0eb"><i class="fa fa-ticket"></i><span> Back to Accounts </span></a>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
