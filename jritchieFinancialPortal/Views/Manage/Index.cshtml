@model jritchieFinancialPortal.Models.IndexViewModel
@{
    ViewBag.Title = "Manage User Profile";
}

<h2>@ViewBag.Title.</h2>



<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Edit User Profile</h4>

                <hr />

                <div class="row">

                    <p class="text-success">@ViewBag.StatusMessage</p>
                    <div>
                        @*<h4>Change your account settings</h4>*@

                        @if (ViewBag.StatusMessage != "")
                        {
                            <hr />
                        }

                        @{
                            var user = User.Identity.Name;
                            if (user != "DemoUser@coderfoundry.com")
                            {
                                <dl class="dl-horizontal">
                                    <dt>Profile:</dt>
                                    <dd>
                                        [
                                        @Html.ActionLink("Update Profile", "ChangeProfile")
                                        ]
                                    </dd>
                                    <dt>Password:</dt>
                                    <dd>
                                        [
                                        @if (Model.HasPassword)
                                        {
                                            @Html.ActionLink("Change your password", "ChangePassword")
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Create", "SetPassword")
                                        }
                                        ]
                                    </dd>
                                </dl>
                            }
                            else
                            {
                                <p><span style="font-weight:bold">Note: </span><span style="font-style:italic">These options are not available to Demo Accounts.</span></p>
                                <dl class="dl-horizontal">
                                    <dt>Name:</dt>
                                    <dd>[Update Profile]</dd>
                                    <dt>Password:</dt>
                                    <dd>[Change your password]</dd>
                                </dl>
                            }
                        }
                    </div>

                    <hr />

                    <div class="row" style="text-align:center">
                        <a href="@Url.Action("Index", "Households", null)" style="color:#ebe0eb"><i class="fa fa-ticket"></i><span> Back to Details </span></a>
                    </div>

                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }














