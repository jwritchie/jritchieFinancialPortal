@model jritchieFinancialPortal.Models.LeaveHouseholdViewModel

@{
    ViewBag.Title = "Leave Household";
}




<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Leave Household</h4>

                <hr />

                <div class="row">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <p style="margin-left:10px">Leaving this Household will remove all access to its data.</p>


                            <!-- *** Void checkbox. *** -->
                            @if (Model.ConfirmLeave)
                            {
                                <div class="form-group" style="margin-left:50px">
                                    @Html.LabelFor(model => model.ConfirmLeave, "I want to leave", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-9">
                                        <div class="checkbox checkbox-success checkbox-circle">
                                            <input id="checkbox-ConfirmLeave" type="checkbox" name="ConfirmLeave" value="true" checked>
                                            <label for="checkbox-ConfirmLeave">
                                                &nbsp;
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!Model.ConfirmLeave)
                            {
                                <div class="form-group" style="margin-left:50px">
                                    @Html.LabelFor(model => model.ConfirmLeave, "I want to leave", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-9">
                                        <div class="checkbox checkbox-success checkbox-circle">
                                            <input id="checkbox-ConfirmLeave" type="checkbox" name="ConfirmLeave" value="true">
                                            <label for="checkbox-ConfirmLeave">
                                                &nbsp;
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- ****** -->

                            @*<div class="form-group">
                                @Html.LabelFor(model => model.ConfirmLeave, "I want to leave", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.ConfirmLeave, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmLeave, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-11">
                                    <input type="submit" value="Leave this Household" class="btn btn-default" style="margin-left:10px"/>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <hr />

                <div class="row" style="text-align:center">
                    <a href="@Url.Action("Details", "Households", new { id = ViewBag.CurrentUserHouseholdId })" style="color:#ebe0eb"><i class="fa fa-ticket"></i><span> Return to Transactions </span></a>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
