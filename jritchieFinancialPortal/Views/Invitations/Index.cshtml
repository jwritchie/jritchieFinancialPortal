@model IEnumerable<jritchieFinancialPortal.Models.CodeFirst.Invitation>

@{
    ViewBag.Title = "Index";
}




<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <div class="row">
                    <h4 class="header-title m-t-0 m-b-30">Existing Invitations</h4>

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">

                        <thead>
                            <tr>
                                <th>
                                    Household Name
                                </th>
                                <th>
                                    Email of Person Invited
                                </th>
                                <th>
                                    Invitation issued
                                </th>
                                <th>
                                    Invitation expires
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Household.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.ToUserTime(item.DateTimeIssued, ViewBag.UserTimeZone as string, "MM/dd/yyyy | hh:mm:ss")
                                    </td>
                                    <td>
                                        @Html.ToUserTime(item.DateTimeExpires, ViewBag.UserTimeZone as string, "MM/dd/yyyy | hh:mm:ss")
                                    </td>
                                    <td style="text-align:center">
                                        @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                                        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:#ebe0eb" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

                <div class="row">
                    <div class="col-sm-12">

                        <hr />

                        <div class="col-md-12" style="text-align:center">
                            <p>
                                @Html.ActionLink("Return to Household's Details", "Details", "Households", new { id = ViewBag.CurrentUserHouseholdId }, new { style = "color:#ebe0eb" })
                            </p>
                        </div>

                    </div><!-- end col -->
                </div><!-- end row -->

            </div>
        </div>
    </div>
</div>






