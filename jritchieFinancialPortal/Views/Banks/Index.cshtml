@model IEnumerable<jritchieFinancialPortal.Models.CodeFirst.Bank>

@{
    ViewBag.Title = "Bank Index";
}

<h2>Bank Index</h2>
<h4>@ViewBag.CurrentUserHouseholdName</h4>


@if (ViewBag.CurrentUserBanksCount == 0)
{
    <p>No Financial Institutions exist in the database.</p>
}


<p>
    @Html.ActionLink("Add a Bank", "Create")
</p>

@if (ViewBag.CurrentUserBanksCount != 0)
{
    <table class="table">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Household)
                </th>*@
            <th>
                Bank Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Household.Name)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
