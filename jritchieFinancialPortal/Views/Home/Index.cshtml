@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="~/Assets/plugins/morris/morris.min.js"></script>
    @{ 
        int chart1 = 0;
        foreach (var bankAccount in Model)
        {
            <script>
                Morris.Bar({
                    //element: 'bar-example',
                    element: 'bar-example + (@chart1)',
                    data: [
                        { y: '', a: @bankAccount.TotalExpenseTransactions, b: @bankAccount.TotalIncomeTransactions }

                        @*//{ y: '', a: @Model.TotalTransactions, b: @Model.Budget.Amount }*@

                        //{ y: '', a: 90.96, b: 100.00 }
                        //{ y: '', a: 139.74, b: 1000.02 },
                        //{ y: '', a: 0.00, b: 0.03 },
                        //{ y: '', a: 20.00, b: 0.00 }
                    ],
                    xkey: 'y',
                    ykeys: ['a', 'b'],
                    labels: ['Expenses', 'Income'],
                    barColors: ['#eed391', '#b8860b'],
                    hideHover: ['true'],
                    resize: ['true']
                });
            </script>

            chart1++;
        }
    }

    <script>
        $(document).ready(function () {
            $(function () {
                // when the modal is closed
                $('#viewTransactionModal').on('hidden.bs.modal', function () {
                    // remove the bs.modal data attribute from it
                    $(this).removeData('bs.modal');
                    // and empty the modal-content element
                    $('#viewTransactionModal .modal-content').empty();
                });
            });
        });
    </script>




    <!-- Datatables-->
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="~/Assets/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/Assets/plugins/datatables/buttons.bootstrap.min.js"></script>
    <script src="~/Assets/plugins/datatables/jszip.min.js"></script>
