@model jritchieFinancialPortal.Models.CodeFirst.Transaction

@{
    ViewBag.Title = "Transaction Details";
    Layout = null;
}

<div class="modal-body">

    <p style="color:gold; margin-top:-26px">Transaction Details</p>

    <div class="row">
        <div class="col-md-12">
            <div class="card-box" style="margin-bottom:0px; border:1px solid gold">
                <dl class="dl-horizontal">
                    <dt>
                        Posted
                    </dt>
                    <dd>
                        @Html.ToUserTime(Model.DatePosted, ViewBag.UserTimeZone as string, "MM/dd/yyyy")
                    </dd>

                    <dt>
                        Posted by
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PostedBy.Fullname)
                    </dd>

                    <br />

                    <dt>
                        Transaction Date
                    </dt>
                    <dd>
                        @Html.ToUserTime(Model.DateOfTransaction, ViewBag.UserTimeZone as string, "MM/dd/yyyy")
                    </dd>

                    <dt>
                        Account
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Account.Name)
                    </dd>

                    <dt>
                        Category
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

</div>